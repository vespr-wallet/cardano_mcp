{
  "name": "@vespr/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for VESPR wallet integration",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "vespr-mcp": "./dist/index.js"
  },
  "engines": {
    "node": "22.21.1",
    "npm": "11.7.0"
  },
  "scripts": {
    "build": "npm run format:check && tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsc --watch",
    "watch": "tsc --watch",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.5",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
